<Window x:Class="ExileHelper.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExileHelper"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#FF323232" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="NotificationWindow" Height="100" Width="100">
    <Grid>
        <Label x:Name="closeLabel" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="5.954,1.118" MouseDown="closeWindowButton_Click" Height="28" Width="24" HorizontalContentAlignment="Center" Margin="0,-5,-5,0"/>
        <TextBlock x:Name="notificationTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Big_P Joined the area" VerticalAlignment="Center" Height="67" Width="80" Margin="10,23,10,10"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
