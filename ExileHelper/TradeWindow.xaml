<Window x:Class="ExileHelper.TradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExileHelper"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        MaxWidth="300"
        MinWidth="300"
        Title="TradeWindow" Width="300" Background="#FF323232" Foreground="{x:Null}">

    <Window.Resources>
        <local:UcFirstConverter x:Key="UcFirstConverter" />
    </Window.Resources>
    <Grid>
        <ListBox x:Name="tradeListBox"  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#FF323232" Margin="0,28,0,34" BorderBrush="{x:Null}" BorderThickness="0" MouseDown="tradesListBox_MouseDown" MouseUp="tradeListBox_MouseUp">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Margin" Value="0,2,0,0" />
                            <Setter Property="Width" Value="288" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Margin" Value="0,2,0,0" />
                            <Setter Property="Width" Value="288" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="290" Height="85" VerticalAlignment="Top" HorizontalAlignment="Center" Background="#FF3F3F3F" Margin="0,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="{Binding Item, Converter={StaticResource UcFirstConverter}}" FontWeight="SemiBold"  HorizontalAlignment="Left" Foreground="White" Margin="10,0,0,50" Grid.RowSpan="2" />
                        <Label Grid.Row="0" Content="{Binding Price.Text}" HorizontalAlignment="Right"  Foreground="White" Margin="0,0,10,50" Grid.RowSpan="2" RenderTransformOrigin="-0.763,0.618" Width="117" HorizontalContentAlignment="Right" />
                        <Label Grid.Row="0" Content="{Binding Player, Converter={StaticResource UcFirstConverter}}" HorizontalAlignment="Left" Foreground="White" Margin="10,17,0,31" Grid.RowSpan="2" Width="271" FontSize="10.667"/>
                        <Label Grid.Row="0" Content="stash tab &quot;&lt;3&quot;" HorizontalAlignment="Right" Foreground="White" Margin="0,0,10,31" Grid.RowSpan="2" Width="215" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="10.667" Height="29"/>
                        <Button x:Name="inviteButton" Grid.Row="1" Content="Invite" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="10,19.4,0,1" Height="30" Click="inviteButton_Click" />
                        <Button x:Name="inMapButton"   Grid.Row="1" Content="In Map" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="145,19.4,0,1" Height="30" Click="inMapButton_Click" RenderTransformOrigin="0.14,0.533" />
                        <Button x:Name="soldButton"  Grid.Row="1" Content="Sold" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="190,19.4,0,1" Height="30" Click="soldButton_Click"  />
                        <Button x:Name="tradeButton"  Grid.Row="1" Content="Trade" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="55,19.4,0,1" Height="30" Click="TradeButton_OnClick" />
                        <Button x:Name="thankButton"  Grid.Row="1" Content="Thank" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="100,19.4,0,1" Height="30" Click="ThankButton_OnClick"  />
                        <Button x:Name="closeButton" Grid.Row="1" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40" Margin="235,19.4,0,1" Height="30" Click="closeButton_Click" RenderTransformOrigin="0.48,0.293" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="closeWindowButton" Content="Close All Trades" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="106" Margin="0,0,10,10" Click="closeWindowButton_Click" RenderTransformOrigin="0.149,-0.268"/>
        <Label x:Name="TitleLabel" Content="Pending Trades" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="33" Background="#FF323232" Foreground="#FFDADADA" FontWeight="SemiBold" FontSize="16" MouseDown="tradesListBox_MouseDown" MouseUp="tradeListBox_MouseUp"/>
        <Label x:Name="closeLabel" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-3,-3,0" RenderTransformOrigin="5.954,1.118" MouseDown="closeWindowButton_Click" Height="23" Width="24" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
