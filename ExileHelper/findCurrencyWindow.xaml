<Window x:Class="ExileHelper.findCurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExileHelper"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Red"
        BorderThickness="2"
        WindowStyle="None"
        Title="findCurrencyWindow"
        Height="300" 
        Width="410.405">
    <Grid>
        <Button x:Name="Capture" Content="Capture" HorizontalAlignment="Left" Margin="322,10,0,0" VerticalAlignment="Top" Width="78" Click="Capture_Click" Height="26"/>
        <Label x:Name="back" Content="CurrencyCounter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" MouseDown="label_MouseDown" Background="#FF707070" Width="307" FontSize="14"/>
        <ListBox x:Name="resultListbox" HorizontalAlignment="Left" Height="245" Margin="300,41,0,0" VerticalAlignment="Top" Width="100" Background="#FF707070" BorderBrush="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
